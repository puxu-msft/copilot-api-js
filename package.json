{
  "name": "@hsupu/copilot-api",
  "version": "0.7.12",
  "description": "Turn GitHub Copilot into OpenAI/Anthropic API compatible server. Usable with Claude Code!",
  "keywords": [
    "proxy",
    "github-copilot",
    "openai-compatible",
    "anthropic-compatible"
  ],
  "homepage": "https://github.com/puxu-msft/copilot-api-js",
  "bugs": "https://github.com/puxu-msft/copilot-api-js/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/puxu-msft/copilot-api-js.git"
  },
  "author": "hsupu",
  "type": "module",
  "bin": {
    "copilot-api": "dist/main.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx tsdown",
    "dev": "bun run --watch ./src/main.ts",
    "knip": "knip-bun",
    "lint": "eslint --cache",
    "lint:all": "eslint --cache .",
    "prepack": "npm run build",
    "prepare": "npm run build && (command -v bun >/dev/null 2>&1 && simple-git-hooks || true)",
    "release": "bumpp && npm publish --access public",
    "start": "NODE_ENV=production bun run ./src/main.ts",
    "test": "bun test tests/*.test.ts",
    "test:all": "bun test tests/*.test.ts && bun test tests/integration/",
    "test:integration": "bun test tests/integration/",
    "typecheck": "tsc"
  },
  "simple-git-hooks": {
    "pre-commit": "bun x lint-staged"
  },
  "lint-staged": {
    "*": "bun run lint --fix"
  },
  "dependencies": {
    "@anthropic-ai/tokenizer": "^0.0.4",
    "citty": "^0.2.0",
    "clipboardy": "^5.1.0",
    "consola": "^3.4.2",
    "fetch-event-stream": "^0.1.6",
    "gpt-tokenizer": "^3.4.0",
    "hono": "^4.11.7",
    "picocolors": "^1.1.1",
    "proxy-from-env": "^1.1.0",
    "srvx": "^0.10.1",
    "tiny-invariant": "^1.3.3",
    "undici": "^7.19.2"
  },
  "devDependencies": {
    "@echristian/eslint-config": "^0.0.54",
    "@types/bun": "^1.3.7",
    "@types/proxy-from-env": "^1.0.4",
    "bumpp": "^10.4.0",
    "eslint": "^9.39.2",
    "knip": "^5.82.1",
    "lint-staged": "^16.2.7",
    "prettier-plugin-packagejson": "^3.0.0",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3"
  }
}
